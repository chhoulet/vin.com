{% extends 'VinFrontOfficeBundle::layout.html.twig' %}

	{% block content %}

        <div class="container">

    		<header class="jumbotron hero-spacer">
                <h1>{{ region.nameRegion |capitalize }}</h1>
                <p>{{ region.descriptionRegion }}</p>
            </header>

                <hr>
	

     <div class="container">

        <!-- Page Features -->
        <div class="row text-center">

            {% for vin in showAppellation %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="http://placehold.it/800x500" alt="">
                    <div class="caption" style ="height:433px;overflow:hidden;">
                        <h3> {{ vin.nameAppellation }}</h3>
                        <p>{{ vin.descriptionAppellation }}</p>
                        <p>
                            <a href="#" class="btn btn-primary">Voir tous les vins de {{ vin.nameAppellation }}</a>
                        </p>
                    </div>
                </div>
            </div>
            {% endfor %}



        </div>
        <!-- /.row -->

{% endblock %}